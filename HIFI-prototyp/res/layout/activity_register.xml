<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/textView_register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/register_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <CheckBox
            android:id="@+id/checkBox_register_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_register_password_again"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:checked="false"
            android:text="@string/register_terms"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_register_email"
            android:layout_alignBottom="@+id/editText_register_email"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/editText_register_email"
            android:text="@string/register_email"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView_heading1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_register_username"
            android:layout_alignBottom="@+id/editText_register_username"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/editText_register_username"
            android:text="@string/register_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_register_birthday"
            android:layout_alignBottom="@+id/editText_register_birthday"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/editText_register_birthday"
            android:text="@string/register_birthday"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_register_passw"
            android:layout_alignBottom="@+id/editText_register_passw"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/editText_register_passw"
            android:text="@string/register_password"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_register_password_again"
            android:layout_alignBottom="@+id/editText_register_password_again"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/editText_register_password_again"
            android:text="@string/register_password_again"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox_register_terms"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/editText_register_password_again"
            android:enabled="false"
            android:text="@string/register_button" />

        <Button
            android:id="@+id/button_main_play"
            style="@style/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/back" />

        <EditText
            android:id="@+id/editText_register_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_register_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="@string/username_hint">
            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editText_register_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_register_username"
            android:layout_toRightOf="@+id/textView_heading1"
            android:ems="10"
            android:hint="@string/email_hint" />

        <EditText
            android:id="@+id/editText_register_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText_register_email"
            android:layout_below="@+id/editText_register_email"
            android:ems="10"
            android:hint="@string/register_birthday_hint"
            android:inputType="date" />

        <EditText
            android:id="@+id/editText_register_passw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText_register_birthday"
            android:layout_below="@+id/editText_register_birthday"
            android:ems="10"
            android:hint="@string/passw_hint"
            android:inputType="textPassword" >
        </EditText>

        <EditText
            android:id="@+id/editText_register_password_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText_register_passw"
            android:layout_below="@+id/editText_register_passw"
            android:ems="10"
            android:hint="@string/register_password_again"
            android:inputType="textPassword" />

    </RelativeLayout>

</ScrollView>